    "postbuild:lib": "copyfiles README.md dist/ngx-signal-state",
    "test:lib": "ng test ngx-signal-state --no-watch --no-progress --browsers=ChromeHeadlessCI",
    "test:ci": "npm run test:lib",
    "semantic-release": "semantic-release"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.0.0",
